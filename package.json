{
  "name": "vscode-diagnostics-dumper",
  "displayName": "Diagnostics-Dumper",
  "description": "Real-time monitoring and exporting VS Code diagnostics information to JSON files",
  "version": "1.0.2",
  "publisher": "konbakuyomu",
  "author": {
    "name": "konbakuyomu",
    "email": "konbakuyomu@gmail.com"
  },
  "icon": "images/icon.jpg",
  "galleryBanner": {
    "color": "#2C5F5D",
    "theme": "dark"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/konbakuyomu/vscode-diagnostics-dumper.git"
  },
  "bugs": {
    "url": "https://github.com/konbakuyomu/vscode-diagnostics-dumper/issues"
  },
  "homepage": "https://github.com/konbakuyomu/vscode-diagnostics-dumper#readme",
  "keywords": [
    "diagnostics",
    "error",
    "warning",
    "export",
    "json",
    "linter",
    "code-quality",
    "analysis",
    "filter",
    "pattern",
    "workspace",
    "multi-window",
    "监控",
    "诊断",
    "导出",
    "过滤"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Diagnostics Dumper",
      "properties": {
        "diagnosticsDumper.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*.md",
            "*.txt",
            "*.json",
            "*.yml",
            "*.yaml",
            "*.xml",
            "*.svg",
            "*.png",
            "*.jpg",
            "*.jpeg",
            "*.gif",
            "*.ico",
            "*.woff",
            "*.woff2",
            "*.ttf",
            "*.eot",
            "*.log",
            "*.lock",
            "package-lock.json",
            "yarn.lock",
            "node_modules/**/*"
          ],
          "description": "File filter pattern list, supports wildcard matching. Examples: *.md (exclude all markdown files), AAA.py (exclude specific file), docs/**/* (exclude all files in docs directory)",
          "markdownDescription": "File filter pattern list, supports wildcard matching.\n\n**Examples:**\n- `*.md` - Exclude all Markdown files\n- `AAA.py` - Exclude specific file\n- `docs/**/*` - Exclude all files in docs directory\n- `*.{png,jpg,gif}` - Exclude multiple image formats"
        }
      }
    },
    "commands": [
      {
        "command": "diagnosticsDumper.dumpNow",
        "title": "Diagnostics Dumper: Dump Now"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "minimatch": "^10.0.3"
  }
}
